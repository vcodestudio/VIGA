# VIGA Environment Configuration

# Model Settings
# Available models: gemini-3-flash-preview, gemini-2.5-flash, gpt-4o, gpt-4o-mini, claude-3-5-sonnet-20241022
MODEL=gemini-3-flash-preview

# Rendering Settings
# RENDER_ENGINE: eevee, cycles, workbench, outline
RENDER_ENGINE=eevee
# RENDER_EFFECT: none, freestyle
RENDER_EFFECT=none

# Task Settings
TASK=test
MAX_ROUNDS=5
MEMORY_LENGTH=12

# Resume Settings
# RESUME: true/false - Enable resume mode
# RESUME_PATH: Path to resume from. If null with RESUME=true, auto-detects latest run
RESUME=false
RESUME_PATH=null

# MCP server connection timeout (seconds). Increase if Blender exec starts slowly.
# MCP_SERVER_CONNECT_TIMEOUT=300

# Path Settings (use forward slashes on Windows too)
# macOS: /Applications/Blender.app/Contents/MacOS/Blender
# Windows (bundled): utils/third_party/infinigen/blender/blender.exe
# Windows (installed): C:/Program Files/Blender Foundation/Blender 4.2/blender.exe
BLENDER_COMMAND=utils/third_party/infinigen/blender/blender.exe
DATASET_PATH=data/static_scene
OUTPUT_ROOT=output/static_scene

# API Keys (Fill these in .env)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

CLAUDE_API_KEY=your-claude-api-key
CLAUDE_BASE_URL=https://api.anthropic.com/v1

GEMINI_API_KEY=your-gemini-api-key
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

QWEN_BASE_URL=http://localhost:8000/v1

MESHY_API_KEY=your-meshy-api-key
VA_API_KEY=your-va-api-key

# Tool Settings
# SEGMENT_OBJECTS: true/false - SAM segments image, cropped images sent to ComfyUI for 3D (no local SAM3D)
SEGMENT_OBJECTS=false
# COMFYUI_API_URL: ComfyUI API base URL for image-to-3D workflow (e.g., http://localhost:8188)
# When SEGMENT_OBJECTS=true, get_better_object uploads cropped images to this endpoint.
COMFYUI_API_URL=
# GOOGLE_VISION_API_KEY: For object detection (Vision API). If unset, GEMINI_API_KEY is used as fallback.
# GOOGLE_VISION_API_KEY=

# Reasoning Settings (OpenAI compatibility mode)
# REASONING_LEVEL: minimal, low, medium, high, none
# - Gemini 3 Pro: low, high (medium not supported)
# - Gemini 3 Flash: minimal, low, medium, high
# - Gemini 2.5: minimal, low, medium, high, none (to disable thinking)
REASONING_LEVEL=low
