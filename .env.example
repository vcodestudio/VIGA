# VIGA Environment Configuration

# Model Settings
# Available models: gemini-3-flash-preview, gemini-2.5-flash, gpt-4o, gpt-4o-mini, claude-3-5-sonnet-20241022
MODEL=gemini-3-flash-preview

# Rendering Settings
# RENDER_ENGINE: eevee, cycles, workbench, outline
RENDER_ENGINE=eevee
# RENDER_EFFECT: none, freestyle
RENDER_EFFECT=none

# Task Settings
TASK=test
MAX_ROUNDS=5
MEMORY_LENGTH=12

# Resume Settings
# RESUME: true/false - Enable resume mode
# RESUME_PATH: Path to resume from. If null with RESUME=true, auto-detects latest run
RESUME=false
RESUME_PATH=null

# Path Settings
BLENDER_COMMAND=/Applications/Blender.app/Contents/MacOS/Blender
DATASET_PATH=data/static_scene
OUTPUT_ROOT=output/static_scene

# API Keys (Fill these in .env)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

CLAUDE_API_KEY=your-claude-api-key
CLAUDE_BASE_URL=https://api.anthropic.com/v1

GEMINI_API_KEY=your-gemini-api-key
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

QWEN_BASE_URL=http://localhost:8000/v1

MESHY_API_KEY=your-meshy-api-key
VA_API_KEY=your-va-api-key

# Tool Settings
# SAM3D: true/false - Enable SAM3D for 3D reconstruction from images
# Requires sam3d conda environment: conda activate sam3d && ./requirements/install_sam3d.sh
SAM3D=false
# SAM3D_API_URL: Remote API URL for SAM3D (e.g., http://192.168.1.100:8000)
# Leave empty or null for local mode (requires NVIDIA GPU)
SAM3D_API_URL=null

# Reasoning Settings (OpenAI compatibility mode)
# REASONING_LEVEL: minimal, low, medium, high, none
# - Gemini 3 Pro: low, high (medium not supported)
# - Gemini 3 Flash: minimal, low, medium, high
# - Gemini 2.5: minimal, low, medium, high, none (to disable thinking)
REASONING_LEVEL=low
